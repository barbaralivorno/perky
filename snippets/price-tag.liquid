<span class="{{ "price-tag " | append: class | strip }}">
  {% if product.compare_at_price != blank
    and product.compare_at_price > product.price
  -%}
    <s>{{ product.compare_at_price | money }}</s>
  {% endif %}
  {% if product.available %}
    {{ product.price | money }}
  {% elsif show_sold_out %}
    {{ "products.product.sold_out" | t }}
  {% endif %}
</span>